@using UPProjects.Models
@model IEnumerable<UPProjects.Models.PhotoGallery>
@{
    ViewData["Title"] = "Photo_Album";
    Layout = "~/Views/Shared/_HNLayout.cshtml";
    var ch = 0;
    string currentActionName = ViewContext.RouteData.Values["action"].ToString();
    <span id="CurrentName" style="display:none;">@currentActionName</span>
}

<!-- Feature header -->
<section class="feature_section feature_img">
    <div class="container">
        <h1>
            फ़ोटो
            गैलरी
        </h1>
    </div>
</section>
<!--/ End Hero Slider -->
<!-- Board of Directors Table -->
<section class="bod_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="services_box">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            if (ch != item.AlbumId)
                            {
                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                    <a href="/HNhome/Photo_Gallery/@item.AlbumId">
                                        <img src=@item.FileName> <span class="our_services_text">

                                            @if (item.HNAlbumTitleName != null)
                                            {
                                                @item.HNAlbumTitleName
                                            }
                                            else
                                            {
                                                @item.AlbumTitleName
                                            }


                                        </span><span class="arrow_link"><img src="/assets1/images/right-arrow.svg"></span>
                                    </a>
                                </div>
                            }
                            ch = item.AlbumId;

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /End Board of Directors Tabler -->


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/APPjs/Common.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            GetUpdatedRecords($("#CurrentName").html());
        });
    </script>
}
