@using UPProjects.Models
@model IEnumerable<UPProjects.Models.WebDirectoryMaster>
@{
    ViewData["Title"] = "WebDirectory";
    Layout = "~/Views/Shared/_HNLayout.cshtml";
    var CategoryId = "";
    var ZoneId = 0;
    var first = 1;
    string currentActionName = ViewContext.RouteData.Values["action"].ToString();
    <span id="CurrentName" style="display:none;">@currentActionName</span>
}


<!-- Feature header -->
<section class="feature_section feature_img">
    <div class="container">
        <h1>वेब निर्देशिका</h1>
    </div>
</section>
<!--/ End Hero Slider -->
<!-- Board of Directors Table -->
<section class="bod_section">
    <div class="container">
        <div style="overflow-x:auto;">
            <table class="table table-bordered table-hover table-striped css-serial">
                <thead class="thead-dark">
                    <tr>
                    <tr>
                        <th>
                            क्रम.संख्या
                        </th>
                        <th>नाम </th>
                        <th>पद</th>
                        <th>पता</th>
                        <th>मोबाइल न.</th>
                        <th>
                            सीयूजी न.
                        </th>
                        <th>
                            टेलीफोन न.
                        </th>
                        <th>ईमेल आईडी</th>

                    </tr>


                </thead>
                <tbody class="">
                    @foreach (var item in Model)
                    {

                        @if (CategoryId != item.CategoryId)
                        {
                            if (first == 1)
                            {

                            }
                            else
                            {

                                <tr><th colspan="8">@item.HNCategoryName</th></tr>

                            }

                        }
                        if (item.ZoneId != ZoneId)
                        {
                            if (item.CategoryId != "4")
                            {
                                <tr><th colspan="8">@item.ZoneNameHN  </th></tr>
                            }

                        }
                        <tr>
                            <td></td>
                            <td>@item.HNName</td>
                            <td>@item.HNPosition</td>
                            <td>@item.HNAddress</td>
                            <td>@item.TelephoneNo</td>
                            <td>@item.CugNo</td>
                            <td>@item.MobileNo</td>
                            <td><a href="mailto:" class="email_link">@item.EmailId</a></td>
                        </tr>

                        CategoryId = item.CategoryId;
                        ZoneId = item.ZoneId;
                        first++;



                    }

                </tbody>
            </table>
        </div>
        </div>
</section>
<!-- /End Board of Directors Tabler -->
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/APPjs/Common.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            GetUpdatedRecords($("#CurrentName").html());
        });
    </script>
}


